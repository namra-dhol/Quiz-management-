@model DataTable
@using System.Data

<main id="main" class="main">
    <div class="container-fluid">
        <!-- Search Section -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Search</h5>
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Enter Quiz Name">
                        </div>
                        <div class="col-md-6">
                            <input type="date" class="form-control" placeholder="Enter Quiz Date">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-success me-2">Search</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table Section -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-end align-items-center my-3">
                    <a class="btn btn-primary btn-sm px-4 py-2 mx-3" asp-area="" asp-controller="Quiz" asp-action="AddEditQuiz">+ Add Quiz</a>
                    <input class="form-control w-auto me-3" type="search" placeholder="Search..." aria-label="Search">
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Quiz Name</th>
                                <th>Total Questions</th>
                                <th>Quiz Date</th>
                                <th>UserID</th>
                                <th>Modified</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                      
                        <tbody>
                                @foreach (DataRow row in Model.Rows)
                                {
                                <tr>
                                    <td>@row["QuizName"]</td>
                                    <td>@row["TotalQuestions"]</td>
                                    <td>@row["QuizDate"]</td>
                                    <td>@row["UserID"]</td>
                                    <td>@row["modified"]</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-1" asp-controller="Quiz" asp-action="AddEditQuiz" >Edit</button>
                                        <button class="btn btn-sm btn-outline-danger">Delete</button>
                                    </td>
                                </tr>
                                }
                        </tbody>
                        
