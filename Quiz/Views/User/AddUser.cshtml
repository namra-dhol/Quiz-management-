@model Quiz.Models.UserModel
<main id="main" class="main">
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-3">
                        <li class="breadcrumb-item">User</li>
                        <li class="breadcrumb-item active">User Add</li>
                    </ol>
                </nav>

                <h5 class="card-title mb-4">User Add/Edit</h5>

                <form asp-controller="User" asp-action="UserSave" method="post">
                    <input hidden asp-for="UserID" />
                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="Username" class="form-label">User Name</label>
                        <input type="text" asp-for="Username" class="form-control" id="userName">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="Password" class="form-label">Password</label>
                        <input type="password" asp-for="Password" class="form-control" id="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="Email" class="form-label">Email</label>
                        <input type="email" asp-for="Email" class="form-control" id="email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="Mobile" class="form-label">Mobile</label>
                        <input type="tel" asp-for="Mobile" class="form-control" id="mobile">
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <input asp-for="IsActive" class="form-check-input">
                        <label class="form-label">Is Active</label>
                        <span asp-validation-for="IsActive" class="text text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <input asp-for="IsAdmin" class="form-check-input">
                        <label class="form-label">Is Admin</label>
                        <span asp-validation-for="IsAdmin" class="text text-danger"></span>
                    </div>

                    

                    <button type="submit" class="btn btn-success me-2">Save</button>
                @*     <button type="reset" class="btn btn-danger">Reset</button> *@
                    <a class ="btn btn-warning ms-1" asp-controller="User" asp-action="UserList">
                        Back
                    </a>
                </form>
            </div>
        </div>
    </div>
</main>