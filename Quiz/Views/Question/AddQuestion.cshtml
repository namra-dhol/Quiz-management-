@model Quiz.Models.QuestionModel

<main id="main" class="main">
    <div class="container mt-4">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb m-3">
                        <li class="breadcrumb-item">Question</li>
                        <li class="breadcrumb-item active">Question Add</li>
                    </ol>
                </nav>

                <h5 class="card-title mb-4">Question Add/Edit</h5>

                <form asp-controller="Question" asp-action="QuestionSave" method="post">
                    <input hidden asp-for="QuestionID" />
                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="QuestionText" class="form-label">Question Text</label>
                        <textarea asp-for="QuestionText" class="form-control" id="questionText" rows="3"></textarea>
                        <span asp-validation-for="QuestionText" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label class="form-label">Question Level</label>
                        <select asp-for="QuestionLevelID" class="form-select" required>
                            <option value="">-- Select Level --</option>
                            @foreach (var level in ViewBag.QuestionLevel)
                            {
                                <option value="@level.QuestionLevelID">@level.QuestionLevel</option>
                            }
                        </select>
                        <span asp-validation-for="QuestionLevelID" class="text text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="OptionA" class="form-label">Option A</label>
                        <input asp-for="OptionA"  type="text" class="form-control" id="optionA" >
                        <span asp-validation-for="OptionA" class="text-danger"></span>
                    </div>

                    <div class="mb-3">.
                        <span class="text-danger">*</span>
                        <label asp-for="OptionB" class="form-label">Option B</label>
                        <input asp-for="OptionB" type="text" class="form-control" id="optionB" >
                        <span asp-validation-for="OptionB" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="OptionC" class="form-label">Option C</label>
                        <input asp-for="OptionC" type="text" class="form-control" id="optionC" >
                        <span asp-validation-for="OptionC" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="OptionD" class="form-label">Option D</label>
                        <input asp-for="OptionD"  type="text" class="form-control" id="optionD" >
                        <span asp-validation-for="OptionD" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="CorrectOption" class="form-label">Correct Option</label>
                        <select asp-for="CorrectOption" class="form-select" id="correctOption">
                            <option value="">Select Correct Option</option>
                            <option asp-for="OptionA"> A</option>
                            <option asp-for="OptionB"> B</option>
                            <option asp-for="OptionD"> C</option>
                            <option asp-for="OptionD">= D</option>
                        </select>
                        <span asp-validation-for="CorrectOption" class="text-danger"></span>
                    </div>\\

                    <div class="mb-3">
                        <span class="text-danger">*</span>
                        <label asp-for="QuestionMarks" class="form-label">Question Marks</label>
                        <input asp-for="QuestionMarks" type="number" class="form-control" id="questionMarks">
                        <span asp-validation-for="QuestionMarks" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <span class="text-danger">*</span>
                        <label class="form-label">User Name</label>
                        <select asp-for="UserID" class="form-select">
                            <option>-- Select User Name --</option>
                            @foreach (var level in ViewBag.User)
                            {
                                <option value="@level.UserID">@level.UserName</option>
                            }
                        </select>
                        <span asp-validation-for="UserID" class="text text-danger"></span>
                    </div>

                @*     <div class="mb-3">
                        <span class="text-danger">*</span>
                        <input asp-for="IsActive" class="form-check-input">
                        <label class="form-label">Is Active</label>
                        <span asp-validation-for="IsActive" class="text text-danger"></span>
                    </div> *@

                    <button type="submit" class="btn btn-success me-2">Save</button>
               @*      <button type="button" class="btn btn-danger">Reset</button> *@
                    <a class="btn btn-warning ms-1" asp-controller="Question" asp-action="QuestionList">
                        Back
                    </a>
                </form>
            </div>
        </div>
    </div>
</main>