@model DataTable
@using System.Data

<main id="main" class="main">
    <h3>
        <span class="text-danger">@TempData["ErrorMessage"]</span>
    </h3>
    <div class="container-fluid">
        <!-- Search Section -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title mb-3">Search</h5>
                <form>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Enter Quiz Name">
                        </div>
                        <div class="col-md-6">
                            <input type="date" class="form-control" placeholder="Enter Quiz Date">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-success me-2">Search</button>
                            <button type="reset" class="btn btn-secondary">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table Section -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-end align-items-center my-3">
                   
                    <a class="btn btn-primary btn-sm px-4 py-2 mx-3" asp-area="" asp-controller="Quiz" asp-action="AddQuiz">+ Add Quiz</a>
                    <a asp-controller="Quiz" asp-action="ExportToExcel" class="btn btn-primary btn-sm px-4 py-2 mx-3">
                        Export to Excel
                    </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover datatable">
                        <thead>
                            <tr>
                                <th>Quiz Name</th>
                                <th>Total Questions</th>
                                <th>Quiz Date</th>
                                <th>UserID</th>
                                <th>Modified</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                      
                        <tbody>
                                @foreach (DataRow row in Model.Rows)
                                {
                                <tr>
                                    <td>@row["QuizName"]</td>
                                    <td>@row["TotalQuestions"]</td>
                                    <td>@row["QuizDate"]</td>
                                    <td>@row["UserID"]</td>
                                    <td>@row["modified"]</td>
                                    <td>
                                        <a class="btn btn-sm btn-outline-primary me-1" asp-controller="Quiz" asp-action="AddQuiz" asp-route-QuizID="@row["QuizID"]">Edit</a>
                                        <a asp-controller="Quiz" asp-action="QuizDelete" asp-route-QuizID="@row["QuizID"]" class="btn btn-outline-danger btn-xs"
                                           onclick="return confirm('Are you sure you want to delete this Quiz?');">
                                            delete 
                                         </a> 
                                       
                                    </td>
                                </tr>
                                }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div>Showing 1 to 3 of 3 entries</div>
                    <nav>
                        <ul class="pagination mb-0">
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Previous</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item disabled">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</main>